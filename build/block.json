{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "create-block/population-count",
  "version": "0.1.0",
  "title": "Population Count",
  "category": "layout",
  "icon": "admin-site-alt",
  "description": "Display counter estimating current human global population.",
  "supports": {
    "align": true,
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true
    },
    "alignWide": true,
    "html": true,
    "typography": {
      "fontSize": false,
      "lineHeight": true
    },
    "color": {
      "background": false
    }
  },
  "textdomain": "population-count",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "alignment": {
      "type": "string"
    },
    "preamble": {
      "type": "string",
      "source": "html",
      "selector": ".preamble"
    },
    "closing": {
      "type": "string",
      "source": "html",
      "selector": ".closing"
    },
    "fontsize": {
      "type": "number"
    }
  }
}